<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tesla Model DataBase</title>
    <link rel="stylesheet" href="style.css">
</head>
<Body>

    <table>
        <tr class="tr">
            <td>Name</td>
            <td>Price</td>
            <td>Model</td>
            <td>Description</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
         <% obj.forEach(function(justOne) { %>
        <tr>
            <td><%= justOne.name %></td>
            <td><%= justOne.price %></td>
            <td><a class="update" href="update/<%= justOne._id %>">Update</a></td>
            <td><a class="delete" href="delete/<%= justOne._id %>">Delete</a></td>
        </tr>
    <% }); %>
    </table>
    <form action="/addName" method="post" >
        <input id="PrName" type="text" required name="name" placeholder="Name" class="mytext"><br><br>
        <input id="PrPrice" type="number" name="price" placeholder="Price" class="mytext"><br><br>
        <input id="PrModel" type="text" required name="model" placeholder="Model" class="mytext"><br><br>
        <input id="PrDes" type="text" name="description" placeholder="Description" class="mytext"><br><br>
        <input type="submit" class="mytext" >
    </form>

    <script src="script.js"></script>
</body>
</html>
